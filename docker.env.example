# image and container
DRPY_IMAGE=ghcr.io/longzanxi/drpy-node:latest
DRPY_PULL_POLICY=always
DRPY_CONTAINER_NAME=drpy-node

# host ports
DRPY_PORT=5757
DRPY_WS_PORT=57575

# runtime
TZ=Asia/Shanghai
NODE_ENV=production

# auth (must change)
API_AUTH_NAME=admin
API_AUTH_CODE=change-this-login-pass
API_PWD=change-this-api-pwd
PROXY_AUTH=drpys

# optional
ENABLE_TASKER=0
MAX_TASK=8
LOG_LEVEL=info

# ctf-local adapter (11源全开建议)
# 默认仅启用稳定集；设为1后会启用包含libvio在内的全部11源
CTF_LOCAL_INCLUDE_UNSTABLE=1
# 如需手工白名单可填写逗号列表；留空表示按上面的 include_unstable 生效
CTF_LOCAL_ADAPTER_SITE_IDS=
# kanbot建议保持本地脚本兜底开启
CTF_LOCAL_KANBOT_ENABLE_LOCAL_SCRIPT=1
# libvio首次拉起建议开启扫描，稳定后可改0减少开销
CTF_LOCAL_LIBVIO_ENABLE_SCAN=1
CTF_LOCAL_LIBVIO_REFRESH=0
CTF_LOCAL_LIBVIO_START_URL=
CTF_LOCAL_LIBVIO_PLAY_URLS=
